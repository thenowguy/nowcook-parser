{
  "ingredient": "tomato",
  "locale": "en",
  "group": "cutting",
  "notes": "Finite set of cutting operations for whole tomatoes. Synonyms are matched case-insensitively.",
  "actions": [
    {
      "id": "tomato.slice",
      "canon": "slice",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 1 },
      "outputs": ["rounds"],
      "synonyms": [
        "slice",
        "cut into slices",
        "cut into rounds",
        "cut crosswise",
        "slice thin",
        "slice thick",
        "slice into rings"
      ],
      "patterns": [
        "(?:thin|thick)?\\s*slice(?:s)?",
        "cut\\s+into\\s+(?:thin|thick)?\\s*(?:slices|rounds|rings)"
      ]
    },
    {
      "id": "tomato.half",
      "canon": "half",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 0.5 },
      "outputs": ["halves"],
      "synonyms": ["halve", "cut in half", "bisect", "split"],
      "patterns": [
        "halve|cut\\s+in\\s+half|bisect|split\\b"
      ]
    },
    {
      "id": "tomato.quarter",
      "canon": "quarter",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 0.75 },
      "outputs": ["quarters"],
      "synonyms": ["quarter", "cut into four", "cut into quarters"],
      "patterns": [
        "quarter(?:s)?\\b|cut\\s+into\\s+four|cut\\s+into\\s+quarters"
      ]
    },
    {
      "id": "tomato.wedge",
      "canon": "wedge",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 1 },
      "outputs": ["wedges"],
      "synonyms": ["cut into wedges", "segment", "cut into sixths", "cut into eighths"],
      "patterns": [
        "cut\\s+into\\s+wedges|segment\\b|cut\\s+into\\s+(?:sixths|eighths)"
      ]
    },
    {
      "id": "tomato.dice",
      "canon": "dice",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 2.5 },
      "outputs": ["small dice"],
      "synonyms": ["dice", "cut into cubes", "cut into small pieces", "cube"],
      "patterns": [
        "\\bdice(?:d)?\\b|cut\\s+into\\s+(?:small\\s+)?cubes?|cut\\s+into\\s+small\\s+pieces"
      ]
    },
    {
      "id": "tomato.chop",
      "canon": "chop",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 1.5 },
      "outputs": ["chopped"],
      "synonyms": ["chop", "roughly chop", "coarsely chop", "chunk"],
      "patterns": [
        "chop(?:ped)?\\b|rough(?:ly)?\\s+chop|coarse(?:ly)?\\s+chop|chunk\\b"
      ]
    },
    {
      "id": "tomato.mince",
      "canon": "mince",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 3.5 },
      "outputs": ["minced"],
      "synonyms": ["mince", "finely chop", "very finely chop", "tiny pieces"],
      "patterns": [
        "\\bmince(?:d)?\\b|very?\\s*finely\\s+chop|tiny\\s+pieces"
      ]
    },
    {
      "id": "tomato.julienne",
      "canon": "julienne",
      "category": "cutting",
      "attention": "attended",
      "defaults": { "planned_min": 3.5 },
      "outputs": ["matchsticks"],
      "synonyms": ["julienne", "matchsticks"],
      "patterns": [
        "\\bjulienne\\b|matchstick(?:s)?"
      ]
    },
    {
      "id": "tomato.concasse",
      "canon": "concassé",
      "category": "compound",
      "attention": "attended",
      "defaults": { "planned_min": 10 },
      "outputs": ["peeled deseeded dice"],
      "synonyms": ["concasse", "concassé", "tomato concasse", "peel, seed and dice"],
      "patterns": [
        "concass[eé]\\b|peel.*seed.*dice"
      ],
      "expands_to": [
        { "canon": "blanch", "defaults": { "planned_min": 2 } },
        { "canon": "peel",   "defaults": { "planned_min": 2 } },
        { "canon": "seed",   "defaults": { "planned_min": 2 } },
        { "canon": "dice",   "defaults": { "planned_min": 2 } }
      ]
    }
  ]
}