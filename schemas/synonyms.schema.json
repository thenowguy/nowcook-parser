{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nowcook.local/schemas/synonyms.schema.json",
  "title": "Synonyms Pack",
  "anyOf": [
    {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["head", "aliases"],
        "properties": {
          "head": { "type": "string" },
          "aliases": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  ]
}