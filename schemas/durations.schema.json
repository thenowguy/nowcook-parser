{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nowcook.local/schemas/packs/durations.schema.json",
  "title": "Durations Pack",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "schema_version": { "type": ["number", "string"] },
        "locale": { "type": "string" },
        "durations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "verb": { "type": "string" },
              "canon": { "type": "string" },
              "name": { "type": "string" },
              "planned_min": { "type": "number", "minimum": 0 },
              "min": { "type": "number", "minimum": 0 },
              "value": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": true
          }
        }
      },
      "required": ["durations"],
      "additionalProperties": true
    },
    {
      "type": "object",
      "additionalProperties": {
        "type": "number",
        "minimum": 0
      }
    },
    {
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "required": ["defaults"],
      "additionalProperties": true
    },
    {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "verb": { "type": "string" },
          "canon": { "type": "string" },
          "name": { "type": "string" },
          "planned_min": { "type": "number", "minimum": 0 },
          "min": { "type": "number", "minimum": 0 },
          "value": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": true
      }
    }
  ]
}