{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nowcook.local/schemas/meal.schema.json",
  "title": "Meal",
  "type": "object",
  "required": ["title", "tasks"],
  "additionalProperties": false,
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "author": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "source_url": { "type": "string", "format": "uri" },
        "serves": { "type": "integer", "minimum": 1 },
        "tags": { "type": "array", "items": { "type": "string" } },
        "verified_by_human": { "type": "boolean" },
        "packs_meta": { "type": "object" }
      }
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "qty": { "type": ["number", "string"] },
          "unit": { "type": "string" },
          "item": { "type": "string" },
          "notes": { "type": "string" }
        },
        "required": ["item"]
      }
    },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "canonical_verb"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "canonical_verb": { "type": "string", "minLength": 1 },
          "duration_min": {
            "type": ["object", "null"],
            "additionalProperties": false,
            "properties": {
              "value": { "type": "integer", "minimum": 1 }
            }
          },
          "planned_min": { "type": ["integer", "null"], "minimum": 1 },
          "readiness_signal": { "type": ["string", "null"] },
          "requires_driver": { "type": "boolean" },
          "self_running_after_start": { "type": "boolean" },
          "inputs": { "type": "array", "items": { "type": "string" } },
          "outputs": { "type": "array", "items": { "type": "string" } },
          "edges": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["from", "type"],
              "properties": {
                "from": { "type": "string", "minLength": 1 },
                "type": { "type": "string", "enum": ["FS", "FF", "SF", "SS"] }
              }
            }
          }
        }
      }
    }
  }
}