{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nowcook.local/schemas/packs/verbs.schema.json",
  "title": "Verb Pack",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "verbs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["canon"],
        "properties": {
          "canon": { "type": "string" },
          "attention": { "type": "string", "enum": ["attended", "unattended_after_start"] },
          "patterns": {
            "type": "array",
            "items": { "type": "string" }
          },
          "defaults": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "planned_min": { "type": "number", "minimum": 1 }
            }
          }
        }
      }
    }
  }
}